{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run bot script with boss",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/bot.py",
                "${input:boss}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "boss",
            "type": "pickString",
            "description": "Select the boss",
            "options": [
                "dain",
                "option2",
                "option3"
            ]
        }
    ]
}